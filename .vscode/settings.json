{
    // Configurações do corretor ortográfico para o projeto
    "cSpell.words": [
        // Ferramentas e tecnologias
        "celerybeat",        // Celery scheduler
        "Connor",            // Nome do autor de pyflow
        "cython",            // Ferramenta para compilação em C
        "dmypy",             // MyPy Daemon
        "github",            // GitHub
        "htmlcov",           // Relatórios HTML de cobertura de testes
        "ipynb",             // Notebooks Jupyter
        "itsdangerous",      // Biblioteca de segurança para Flask
        "mkdocs",            // Ferramenta de documentação
        "mypy",              // Type checking em Python
        "nosetests",         // Framework de testes
        "pipenv",            // Gerenciador de dependências
        "Pipfile",           // Arquivo de configuração do Pipenv
        "pycache",           // Cache compilado de Python
        "pyenv",             // Gerenciador de versões Python
        "pyflow",            // Gerenciador de dependências PEP 582
        "pypa",              // Python Packaging Authority
        "pypackages",        // Diretório padrão PEP 582
        "pytype",            // Verificador de tipos estático
        "ropeproject",       // Configuração do Rope
        "scrapy",            // Framework de scraping
        "sdist",             // Source distribution
        "Spyder",            // IDE Python
        "spyderproject",     // Configuração do Spyder
        "spyproject",        // Configuração alternativa do Spyder
        "venv",              // Diretório de ambientes virtuais
        "webassets",         // Gerenciamento de assets web
        "Werkzeug"           // Biblioteca WSGI para Flask
    ],

    // Ignorar verificações de arquivos dentro de __pycache__
    "files.exclude": {
        "**/__pycache__": true, // Ignorar arquivos compilados em __pycache__
        "**/.pytest_cache": true, // Ignorar cache de testes do pytest
        ".venv": true, // Ignorar diretório de ambiente virtual

    }
}
